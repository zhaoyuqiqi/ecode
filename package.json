{
  "name": "ecode",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "lint-staged",
    "tailwind": "tailwindcss -i src/assets/index.css -o src/output.css --watch",
    "preview": "vite preview",
    "prepare": "husky"
  },
  "dependencies": {
    "@arco-design/web-react": "^2.63.1",
    "normalize.css": "^8.0.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.25.1"
  },
  "devDependencies": {
    "@arco-plugins/vite-react": "^1.3.3",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "husky": "^9.1.4",
    "less": "^4.2.0",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.7",
    "typescript": "^5.2.2",
    "vite": "^5.3.4"
  },
  "lint-staged": {
    "*.{tsx,jsx,ts,js}": [
      "eslint --report-unused-disable-directives --max-warnings 0",
      "prettier --write",
      "git add"
    ],
    "*.{css,less,scss}": [
      "prettier --write",
      "git add"
    ]
  }
}
