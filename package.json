{
  "name": "ecode",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev:platform": "pnpm --filter ecode-admin run dev",
    "lint": "lint-staged",
    "prepare": "husky"
  },
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.3",
    "typescript": "^5.2.2"
  },
  "lint-staged": {
    "*.{tsx,jsx,ts,js}": [
      "eslint --report-unused-disable-directives --max-warnings 0",
